<UserControl
    x:Class="UniversalSend.Controls.ContentDialogControls.CreateTextSendTaskControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalSend.Controls.ContentDialogControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter Text" Style="{ThemeResource TitleTextBlockStyle}"/>
        <TextBox Grid.Row="1" HorizontalAlignment="Stretch" TextWrapping="Wrap" Name="MainTextBox" Margin="0,8,0,0" x:FieldModifier="public"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Cancel" Name="CancelButton" x:FieldModifier="public" Margin="0,0,8,0"/>
            <Button Content="OK" Name="ConfirmButton" x:FieldModifier="public"/>
        </StackPanel>
    </Grid>
</UserControl>
