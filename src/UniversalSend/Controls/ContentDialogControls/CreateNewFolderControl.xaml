<UserControl
    x:Class="UniversalSend.Controls.ContentDialogControls.CreateNewFolderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalSend.Controls.ContentDialogControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel>
            <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="Create New Folder" />
            <TextBlock Text="Please enter a name for the folder" Margin="0,0,0,4" />
            <TextBox Name="NameTextBox" x:FieldModifier="public" Tapped="NameTextBox_Tapped" HorizontalAlignment="Stretch" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                <Button Name="CancelButton" Content="Cancel" x:FieldModifier="public" Margin="0,0,4,0" />
                <Button Name="OKButton" Content="OK" x:FieldModifier="public" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>