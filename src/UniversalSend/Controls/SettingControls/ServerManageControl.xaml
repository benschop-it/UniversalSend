<UserControl
    x:Class="UniversalSend.Controls.SettingControls.ServerManageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalSend.Controls.SettingControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid MaxWidth="100" HorizontalAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Name="RestartButton" Click="RestartButton_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                ToolTipService.ToolTip="Restart Server">
            <FontIcon Glyph="&#xE72C;" Name="RestartButtonIcon"/>
        </Button>

        <Button Grid.Column="1" Name="StopButton" Click="StopButton_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                ToolTipService.ToolTip="Stop Server">
            <FontIcon Glyph="&#xE71A;" />
        </Button>
    </Grid>
</UserControl>
